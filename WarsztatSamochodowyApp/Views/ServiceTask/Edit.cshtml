@model WarsztatSamochodowyApp.Models.ServiceTask

@{
    ViewData["Title"] = "Edit Service Task";
    var allParts = ViewBag.AllParts as List<WarsztatSamochodowyApp.Models.Part>;

    // Słownik: PartId => Quantity użyte w tym zadaniu
    var usedPartsDict = Model.UsedParts?.ToDictionary(up => up.PartId, up => up.Quantity) ?? new Dictionary<int, int>();
}

<h2>Edit Service Task</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Price"></label>
        <input asp-for="Price" type="number" step="0.01" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <h4>Used Parts</h4>
    <table class="table table-bordered">
        <thead>
        <tr>
            <th>Part Name</th>
            <th>Price</th>
            <th>Quantity</th>
        </tr>
        </thead>
        <tbody>
        @if (allParts != null)
        {
            for (int i = 0; i < allParts.Count; i++)
            {
                var part = allParts[i];
                var qty = usedPartsDict.ContainsKey(part.Id) ? usedPartsDict[part.Id] : 0;
                <tr>
                    <td>@part.Name</td>
                    <td>@part.Price zł</td>
                    <td>
                        <input type="hidden" name="partIds" value="@part.Id" />
                        <input type="number" name="quantities" min="0" value="@qty" class="form-control" />
                    </td>
                </tr>
            }
        }
        </tbody>
    </table>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
