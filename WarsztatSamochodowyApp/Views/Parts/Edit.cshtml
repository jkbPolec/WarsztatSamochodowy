@model WarsztatSamochodowyApp.DTO.PartDto

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edytuj Część</h1>

<h4>Dane części</h4>
<hr class="border-secondary"/>
<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit">
            <div asp-validation-summary="All" class="text-danger mb-3"></div>
            <input type="hidden" asp-for="Id"/>
            <div class="form-group mb-3">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control"/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" type="number" step="0.01"/>
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="PartTypeId" class="control-label">Typ części</label>
                <select asp-for="PartTypeId" class="form-control" asp-items="ViewBag.PartTypeId"></select>
                <span asp-validation-for="PartTypeId" class="text-danger"></span>
            </div>
            <div class="form-group mt-4">
                <input type="submit" value="Zapisz zmiany" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>


<div class="mt-4">
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left me-2"></i>Powrót do listy
    </a>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
