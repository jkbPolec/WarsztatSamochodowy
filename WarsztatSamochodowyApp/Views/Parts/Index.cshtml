@model IEnumerable<WarsztatSamochodowyApp.DTO.PartDto>

@{
    ViewData["Title"] = "Lista Części";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Części</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Dodaj nową część</a>
</p>
<table class="table table-dark table-striped table-hover align-middle">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PartType)
        </th>
        <th>Akcje</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @item.Name
            </td>
            <td>
                @item.Price.ToString("C")
            </td>
            <td>
                @item.PartType?.Name
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Edytuj</a>
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Szczegóły</a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Usuń</a>
            </td>
        </tr>
    }
    </tbody>
</table>