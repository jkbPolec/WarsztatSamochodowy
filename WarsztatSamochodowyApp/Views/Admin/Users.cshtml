@model IEnumerable<WarsztatSamochodowyApp.Data.AppUser>

@{
    Layout = "_Layout";
}

<!DOCTYPE html>

<html>
<head>
    <title>title</title>
</head>
<body>
<h2>Użytkownicy</h2>

<table>
    <thead>
    <tr>
        <th>Email</th>
        <th>Akcje</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var user in Model)
    {
        <tr>
            <td>@user.Email</td>
            <td>
                <a asp-action="EditUser" asp-route-id="@user.Id">Edytuj</a> |
                <form asp-action="DeleteUser" asp-route-id="@user.Id" method="post" style="display:inline;">
                    <button type="submit">Usuń</button>
                </form>
            </td>
        </tr>
    }
    </tbody>
</table>
</body>
</html>